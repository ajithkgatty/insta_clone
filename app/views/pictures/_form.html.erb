<div class="form-wrapper">	
	<%= simple_form_for @picture, html: { multipart: true} do |f| %>
		<% if @picture.errors.any? %>
			<div id ="errors" >
				<h2> <%= pluralize(@picture.errors.count, "error") %> prevented this picture from saving !!!</h2>
				<ul>
					<% @picture.errors.full_messages.each do |msg| %>
						<li> <%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		
		<div class="form-group">
			<%= f.input :name, input_html: { class: 'form-control' } %>
		</div>
		<div class="form-group">
			<%= f.input :image, as: :file %>
		</div>
		<div class="form-group">
			<%= f.input :description, as: :text, input_html: { class: 'form-control' } %>	
		</div>
		<div class="text-center">
			<%= f.button :submit, class: 'btn btn-info' %>
		</div>
	<% end %>
</div>






